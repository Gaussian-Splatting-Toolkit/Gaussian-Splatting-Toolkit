{
  "name": "Gaussian Splatting Toolkit Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "gstoolkit",
  "remoteUser": "user",
  "containerUser": "user",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "initializeCommand": "echo 'Hello World!'",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        }
      },
      "extensions": [
        "mutantdino.resourcemonitor",
        "ms-azuretools.vscode-docker",
        "nvidia.nsight-vscode-edition",
        "ms-python.python",
        "charliermarsh.ruff",
        "ms-vscode.cpptools-extension-pack",
        "tamasfe.even-better-toml",
        "yzhang.markdown-all-in-one"
      ],
      "mounts": [
        "type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix",
        "type=bind,source=${localEnv:HOME}/.ssh/,target=/home/user/.ssh/",
        "type=bind,source=${localEnv:HOME}/.Xauthority,target=/home/user/.Xauthority",
        "type=bind,source=/mnt/wslg,target=/mnt/wslg"
      ]
    }
  }
}
